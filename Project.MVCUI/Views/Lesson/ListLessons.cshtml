@model LessonListPageVM
@{
    ViewBag.Title = "ListLessons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Ders ID</th>
            <th>Ders Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        <tbody>
            @foreach (LessonVM item in Model.Lessons)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.LessonName</td>
                    <td>@Html.ActionLink("Sil", "DeleteLesson", new {id= item.ID }, new {@class="btn btn-danger"})</td>
                    <td>@Html.ActionLink("Güncelle", "UpdateLesson", new {id= item.ID }, new {@class="btn btn-warning"})</td>
                  

                </tr>
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Yeni Ders Kaydı","AddLesson",null, new {@class="btn btn-primary"})



