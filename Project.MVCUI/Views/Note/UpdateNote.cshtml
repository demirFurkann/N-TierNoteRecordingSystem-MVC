@model NoteAddUpdatePageVM
@{
    ViewBag.Title = "UpdateNote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

@Html.HiddenFor(x => x.Note.ID)
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Sınav 1 </label>
            @Html.TextBoxFor(x => x.Note.Exam1, new { @class = "form-control" })
        </div>
    </div>

    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Sınav 2 </label>
            @Html.TextBoxFor(x => x.Note.Exam2, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Sınav 3 </label>
            @Html.TextBoxFor(x => x.Note.Exam3, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Proje</label>
            @Html.TextBoxFor(x => x.Note.Project, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-sm-10">
            <button class="btn-primary">Güncelle</button>
        </div>
    </div>

}
