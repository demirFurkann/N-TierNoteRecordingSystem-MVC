@model StudentAddUpdatePageVM
@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Student.ID)
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Öğrenci Adı</label>
            @Html.TextBoxFor(x => x.Student.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Soyismi</label>
            @Html.TextBoxFor(x => x.Student.LastName, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Cinsiyeti</label>
            @Html.TextBoxFor(x => x.Student.Gender, new { @class = "form-control" })
        </div>
    </div>

    <br />
    <div class="form-group">

        <div class="form-group">
            <div class="col-sm-10">
                <label class="row-cols-4">Kulubü</label>
                @if (Model.Clubs != null)
                {
                    @Html.DropDownListFor(x => x.Student.ClubID, new SelectList(Model.Clubs, "ID", "ClubName"), "Lütfen Seçiniz", new { @class = "form-control" })
                }
                else
                {
                    <p>Kulüp bulunamadı.</p>

                }
            </div>
        </div>

    </div>

    <div class="form-group">

        <div class="col-sm-10">
            <button class="btn-primary">Güncelle</button>
        </div>
    </div>



}

