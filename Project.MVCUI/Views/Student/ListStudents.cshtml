@model StudentListPageVM
@{
    ViewBag.Title = "ListStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>Öğrenci ID</th>
            <th>Öğrenci İsmi</th>
            <th>Öğrenci Soyİsim</th>
            <th>Cinsiyet</th>
            <th>Kulübü</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
        <tbody>
             @foreach (StudentVM item in Model.Students)
             {
                 <tr>
                     <th>@item.ID</th>
                     <th>@item.FirstName</th>
                     <th>@item.LastName</th>
                     <th>@item.Gender</th>
                     <th>@item.Club</th>
                     <th>@Html.ActionLink("Sil", "DeleteStudent", new { id = item.ID }, new {@class="btn btn-warning"})</th>
                     <th>@Html.ActionLink("Güncelle", "UpdateStudent", new { id = item.ID }, new {@class="btn btn-danger"})</th>
                 </tr>
             }
        </tbody>
    </table>

</div>
@Html.ActionLink("Öğrenci Ekle", "AddStudent", null, new {@class="btn btn-primary"})

