@model StudentAddUpdatePageVM
@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-sm-12">

            <section class="panel">
                <header class="panel-heading">
                    Öğrenci Ekleme Sayfası
                </header>

                <div class="panel-body">


                    <div class="form-group">
                        <label class="col-sm-2">Öğrenci Isim</label>
                        <div class="col-sm-10">



                            @Html.TextBoxFor(x => x.Student.FirstName, new { @class = "form-control genislik" })
                        </div>
                    </div>


                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Öğrenci Soyisim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Student.LastName, new { @class = "form-control genislik" })
                        </div>
                    </div>
                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Cinsiyet</label>
                        <div class="col-sm-10">
                           @Html.TextBoxFor(x=> x.Student.Gender, new {@class="form-control genislik"})

                        </div>
                    </div>
                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Kulübü</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Student.ClubID, new SelectList(Model.Clubs, "ID", "ClubName"), "Lütfen seciniz", new { @class = "form-control" })
                        </div>
                    </div>
                    <br /> <br />



                    <div class="form-group">
                        <label class="col-sm-2">Resim seciniz</label>
                        <div class="col-sm-10">

                            <input type="file" name="image" class="form-control genislik" />
                            <br />

                            @Html.TextBox("fileName", null, new { @class = "form-control genislik", placeholder = "Resim ismi giriniz" })

                        </div>
                    </div>
                    <br /> <br />



                    <div class="form-group">
                        <label class="col-sm-2">İşlem:</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>


                </div>


            </section>


        </div>
    </div>
}
